<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/toastEditText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="X 위치"
            android:inputType="numberSigned"/>
        <EditText
            android:id="@+id/toastEditText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="Y 위치"
            android:inputType="numberSigned"/>
        <Button
            android:id="@+id/toastButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="띄우기"
            android:textSize="20sp"
            android:onClick="onToastButton1Clicked"/>
    </LinearLayout>
    <Button
        android:id="@+id/toastButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모양 바꿔 띄우기"
        android:textSize="20sp"
        android:onClick="onToastButton2Clicked"/>
    <Button
        android:id="@+id/toastButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="스낵바 띄우기"
        android:textSize="20sp"
        android:onClick="onToastButton3Clicked"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/toastTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버튼을 누르면 대화상자가 뜹니다"
            android:textSize="25sp"
            android:paddingTop="30dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/toastButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click"
            android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>